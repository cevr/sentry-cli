{
  "name": "@cvr/sentry",
  "version": "0.1.1",
  "type": "module",
  "bin": {
    "sentry": "./bin/sentry"
  },
  "files": [
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "dev": "bun run src/sentry.ts",
    "build": "bun build src/sentry.ts --compile --outfile bin/sentry",
    "postinstall": "bun run build",
    "install:global": "ln -sf $(pwd)/bin/sentry $(bun pm bin -g)/sentry",
    "uninstall:global": "rm -f $(bun pm bin -g)/sentry",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "effect-language-service patch",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cevr/sentry-cli.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@effect/cli": "^0.73.1",
    "@effect/platform": "^0.94.2",
    "@effect/platform-bun": "^0.87.1",
    "effect": "^3.19.15"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@effect/language-service": "^0.64.1",
    "@effect/vitest": "^0.27.0",
    "@types/bun": "1.3.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
